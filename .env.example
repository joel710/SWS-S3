# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment: development, staging, or production
APP_ENV=production

# Application URL for generating absolute URLs
APP_URL=https://your-domain.com

# Timezone
TIMEZONE=UTC

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Force HTTPS redirects in production
SSL_ENFORCE=true

# Rate limiting (requests per hour per API key)
RATE_LIMIT=1000

# Session configuration for admin interface
SESSION_LIFETIME=7200
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict

# Encryption key for sensitive data (generate a random 32-character string)
ENCRYPTION_KEY=your_random_32_character_encryption_key_here

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Maximum file size in bytes (50MB = 52428800)
MAX_FILE_SIZE=52428800

# Storage path (absolute or relative to project root)
STORAGE_PATH=./storage

# Allowed origins for CORS (comma-separated)
ALLOW_ORIGINS=https://app.example.com,https://admin.example.com,*

# Temporary upload directory
UPLOAD_TEMP_PATH=./tmp

# =============================================================================
# IMAGE OPTIMIZATION CONFIGURATION
# =============================================================================
# Enable automatic image optimization
ENABLE_OPTIMIZATION=true

# Thumbnail sizes in pixels (comma-separated)
THUMBNAIL_SIZES=100,300,600,1200

# JPEG compression quality (0-100)
JPEG_QUALITY=85

# WebP compression quality (0-100)
WEBP_QUALITY=80

# Maximum image dimensions
MAX_IMAGE_WIDTH=4096
MAX_IMAGE_HEIGHT=4096

# Enable WebP conversion
ENABLE_WEBP_CONVERSION=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: debug, info, warning, error, critical
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/application.log

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Log slow queries (threshold in milliseconds)
SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Database connection pool size
DB_POOL_SIZE=10

# Enable response compression
ENABLE_COMPRESSION=true

# Cache configuration (if using Redis/Memcached)
CACHE_DRIVER=redis
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PREFIX=object_storage

# Browser caching headers
STATIC_CACHE_DURATION=31536000  # 1 year
API_CACHE_DURATION=3600         # 1 hour

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable health check endpoint
ENABLE_HEALTH_CHECK=true

# Metrics collection
ENABLE_METRICS=true

# Notification settings for alerts
ALERT_EMAIL=admin@example.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Debug mode (only in development)
DEBUG=false

# Display errors on screen (only in development)
DISPLAY_ERRORS=false

# Enable query logging (only in development)
ENABLE_QUERY_LOG=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Enable automatic backups
ENABLE_BACKUPS=true

# Backup schedule (cron expression)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Backup storage path
BACKUP_PATH=./backups

# Backup retention period in days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# AWS S3 COMPATIBILITY (optional)
# =============================================================================
# Enable S3 backend storage
ENABLE_S3_BACKEND=false

# S3 configuration
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_ENDPOINT=https://s3.amazonaws.com

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_ENCRYPTION=tls
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=Object Storage Service

# =============================================================================
# ADMIN INTERFACE
# =============================================================================
# Admin interface URL path
ADMIN_PATH=/admin

# Default admin user (only used during initial setup)
# IMPORTANT: Change these values after first login
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change_me_immediately

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API version
API_VERSION=v1

# Enable API documentation
ENABLE_API_DOCS=true

# API request timeout in seconds
API_TIMEOUT=300

# Maximum concurrent uploads per user
MAX_CONCURRENT_UPLOADS=5

# =============================================================================
# CONTENT DELIVERY NETWORK (optional)
# =============================================================================
# Enable CDN integration
ENABLE_CDN=false

# CDN base URL
CDN_BASE_URL=https://cdn.your-domain.com

# CDN caching configuration
CDN_CACHE_TTL=86400  # 24 hours

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable multipart uploads for large files
ENABLE_MULTIPART_UPLOAD=true

# Enable file versioning
ENABLE_VERSIONING=false

# Enable file encryption at rest
ENABLE_ENCRYPTION_AT_REST=false

# Enable audit logging
ENABLE_AUDIT_LOG=true

# Enable real-time notifications
ENABLE_REAL_TIME_NOTIFICATIONS=false